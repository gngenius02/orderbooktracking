{
  "name": "cw-sdk-node",
  "version": "1.0.0-beta.9",
  "description": "Cryptowatch SDK for NodeJS",
  "author": "Cryptowatch <infra@cryptowatch>",
  "homepage": "https://cryptowat.ch/docs/websocket-api",
  "repository": {
    "type": "git",
    "url": "https://github.com/cryptowatch/cw-sdk-node.git"
  },
  "license": "BSD-2-Clause-FreeBSD",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "lint": "eslint ./src/*/**.ts",
    "test": "jest",
    "build": "tsc -p tsconfig.release.json",
    "prepare": "npm run build",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" build",
    "pbjs:static-module": "pbjs -t static-module -w commonjs -o index.tmp.js 'google/protobuf/*.proto' 'proto/{client,markets,stream,broker}/*.proto'",
    "pbjs:definitions": "pbjs -t static-module 'google/protobuf/*.proto' 'proto/{client,markets,stream,broker}/*.proto' | pbts -o proto.d.ts -",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "docs": "rm -rf ./docs && typedoc --options ./typedoc.js ./src"
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "decimal.js-light": "^2.5.0",
    "js-yaml": "^3.13.1",
    "long": "^4.0.0",
    "protobufjs": "^6.10.2",
    "superagent": "^5.2.1",
    "tslib": "^1.10.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.107.0",
    "@types/big.js": "^4.0.5",
    "@types/get-port": "^4.2.0",
    "@types/jest": "^24.0.25",
    "@types/js-yaml": "^3.12.1",
    "@types/long": "^4.0.0",
    "@types/node": "^13.1.4",
    "@types/superagent": "^4.1.4",
    "@types/uuid": "^3.4.6",
    "@types/ws": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "copyfiles": "^2.4.0",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "get-port": "^5.1.0",
    "in-series": "^0.0.4",
    "jest": "^24.9.0",
    "minimist": "1.2.3",
    "prettier": "^1.19.1",
    "superagent-mocker": "^0.5.2",
    "ts-jest": "^24.3.0",
    "typedoc": "^0.15.6",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.8.3"
  },
  "keywords": [
    "cryptowatch",
    "crypto",
    "trade",
    "stream",
    "kraken"
  ],
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "./src/"
    ],
    "testRegex": "(/__tests__/.*(test|spec))\\.(ts|js)x?$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ]
  }
}
